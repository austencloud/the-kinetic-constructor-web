					"src": "/pwa/shortcut-monitor.png",
					"sizes": "96x96",
					"type": "image/png"
				}
			]
		},
		{
			"name": "Compare Versions",
			"short_name": "Compare",
			"description": "Side-by-side version comparison",
			"url": "/compare",
			"icons": [
				{
					"src": "/pwa/shortcut-compare.png",
					"sizes": "96x96",
					"type": "image/png"
				}
			]
		}
	],

	"share_target": {
		"action": "/share",
		"method": "POST",
		"enctype": "multipart/form-data",
		"params": {
			"title": "title",
			"text": "text",
			"url": "url",
			"files": [
				{
					"name": "config",
					"accept": [".json", ".js", ".ts", ".config.js"]
				}
			]
		}
	},

	"file_handlers": [
		{
			"action": "/handle-config",
			"accept": {
				"application/json": [".json"],
				"text/javascript": [".js"],
				"text/typescript": [".ts"],
				"application/config": [".config.js", ".config.ts"]
			}
		}
	],

	"protocol_handlers": [
		{
			"protocol": "tka-launcher",
			"url": "/protocol?action=%s"
		}
	],

	"edge_side_panel": {
		"preferred_width": 400
	},

	"launch_handler": {
		"client_mode": "navigate-existing"
	},

	"handle_links": "preferred",

	"capture_links": "existing-client-navigate",

	"prefer_related_applications": false
}
