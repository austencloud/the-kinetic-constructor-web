			]
		},
		{
			"name": "Launch V1 Legacy",
			"short_name": "V1",
			"description": "Quick launch V1 Legacy version",
			"url": "/launch/v1-legacy",
			"icons": [
				{
					"src": "/pwa/shortcut-v1.png",
					"sizes": "96x96",
					"type": "image/png"
				}
			]
		},
		{
			"name": "Performance Monitor",
			"short_name": "Monitor",
			"description": "View performance metrics",
			"url": "/performance",
			"icons": [
